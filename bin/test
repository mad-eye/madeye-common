#! /bin/sh

set -e

while [ $# -gt 0 ]
do
    case "$1" in
        -w)  WATCH=--watch;;
        -g)  GREP="-g $2"; shift;;
        --)	shift; break;;
        -*)
            echo >&2 \
            "usage: $0 [-w] [-g REGEXP]"
            exit 1;;
        *)  break;;	# terminate while loop
    esac
    shift
done

find test -name '*Test.coffee' -print0 | xargs -0 node_modules/mocha/bin/mocha $WATCH $GREP --compilers coffee:coffee-script
